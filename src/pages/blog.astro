---
import Layout from "../layouts/Layout.astro";
import BlogPostCard from "../components/BlogPostCard.astro";
import { getCollection } from "astro:content";
const allPosts = await getCollection("blog");
---

<Layout title="My Blog">
  <main>
    <h1>My Blog</h1>
    <p>This is where I'll post my blog entries.</p>

    <ul>
      {allPosts.map((post: any) => <BlogPostCard post={post} />)}
    </ul>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    max-width: 800px;
  }

  ul {
    list-style: none;
    padding: 0;
  }
</style>
